<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:weightSum="10"
        android:background="@drawable/bg_radius_15"
        android:backgroundTint="#fff">

        <ImageView
            android:id="@+id/hinhanh_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/img_default"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tenthuonggoi_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tenkhoahoc_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên khoa học: Đại tá"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/dactinh_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặc tính: Đại tá"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/maula_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màu lá: Việt Nam"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>